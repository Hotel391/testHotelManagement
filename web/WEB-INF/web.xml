<?xml version="1.0" encoding="UTF-8"?>
<web-app version="6.0" xmlns="https://jakarta.ee/xml/ns/jakartaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_6_0.xsd">
    <servlet>
        <servlet-name>DashBoard</servlet-name>
        <servlet-class>controllers.admin.DashBoard</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Statistics</servlet-name>
        <servlet-class>controllers.admin.Statistics</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AdminReview</servlet-name>
        <servlet-class>controllers.admin.AdminReview</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AdminRoom</servlet-name>
        <servlet-class>controllers.admin.AdminRoom</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AdminService</servlet-name>
        <servlet-class>controllers.admin.AdminService</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Register</servlet-name>
        <servlet-class>controllers.common.Register</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>VerifyEmail</servlet-name>
        <servlet-class>controllers.common.VerifyEmail</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ConfirmVerifyEmail</servlet-name>
        <servlet-class>controllers.common.ConfirmVerifyEmail</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ForgotPassword</servlet-name>
        <servlet-class>controllers.common.ForgotPassword</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ConfirmResetPassword</servlet-name>
        <servlet-class>controllers.common.ConfirmResetPassword</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AdminReview</servlet-name>
        <url-pattern>/admin/review</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AdminRoom</servlet-name>
        <url-pattern>/admin/room</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AdminService</servlet-name>
        <url-pattern>/admin/service</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DashBoard</servlet-name>
        <url-pattern>/admin/dashboard</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Statistics</servlet-name>
        <url-pattern>/admin/statistics</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Register</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>VerifyEmail</servlet-name>
        <url-pattern>/verifyEmail</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ConfirmVerifyEmail</servlet-name>
        <url-pattern>/confirmEmail</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ForgotPassword</servlet-name>
        <url-pattern>/forgotPassword</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ConfirmResetPassword</servlet-name>
        <url-pattern>/confirmResetPassword</url-pattern>
    </servlet-mapping>
    <welcome-file-list>
        <welcome-file>login</welcome-file>
    </welcome-file-list>
</web-app>
